doctype html
html
  head
    title Tietokantayhteystesti
    link(rel="stylesheet" href="http://advancedkittenry.github.io/css/base.css")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js")
    script(src="http://advancedkittenry.github.io/javascript/bootstrap.js")
  body
    .container
      h1 Projektin tietokantataulut
      each table in tables
        .panel.panel-default
          .panel-body
            h2= table.name
            table.table.table-striped
              thead
                tr
                  th Name
                  th(style="width:20%") Type
                  th(style="width:10%") Nullable
              tbody
                each column in table.columns
                  tr
                    td= column.column_name
                    td= column.data_type
                    td= column.is_nullable
            h3 Data
            if table.data.length > 0
              table.table.table-striped
                thead
                  tr
                    each column in table.columns
                      th= column.column_name
                tbody
                  each row in table.data
                    tr
                    each column in row
                      td= column
            else
              .alert.alert-info Table is currently empty
