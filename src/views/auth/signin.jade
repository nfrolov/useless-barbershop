extends ../layout
block content
  .row
    .col-md-6.col-md-offset-3
      if message
        .alert.alert-danger= message
      form.form-horizontal(method="post" action="/signin")
        .form-group
          label.control-label.col-md-3(for="username") Username
          .col-md-9
            input#username.form-control(type="text" name="username")
        .form-group
          label.control-label.col-md-3(for="password") Password
          .col-md-9
            input#password.form-control(type="password" name="password")
        .form-group
          .col-md-offset-3.col-md-9
            button.btn.btn-primary Sign in

